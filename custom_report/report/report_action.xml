<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="custom_report_paperformate_id" model="report.paperformat">
            <field name="name">European A4 Landscape</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">55</field>
            <field name="margin_bottom">25</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">55</field>
            <field name="dpi">90</field>
        </record>

        <record id="custom_report_action" model="ir.actions.report">
            <field name="name">New Invoice Report</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_report.custom_report_temp_id</field>
            <field name="report_file">custom_report.custom_report_temp_id</field>
            <field name="print_report_name">'Invoice Report'</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="custom_report_paperformate_id"/>
        </record>

        <record id="order_action_id" model="ir.actions.report">
            <field name="name">New Quotation/Order Report</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_report.custom_order_temp_id</field>
            <field name="report_file">custom_report.custom_order_temp_id</field>
            <field name="print_report_name">'Sale Report'</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="custom_report_paperformate_id"/>
        </record>
    </data>
</odoo>
